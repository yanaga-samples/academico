<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator" />
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%t] %-5p %c - %m%n</pattern>
        </encoder>
    </appender>
    <logger name="org.apache" level="WARN" />
    <logger name="org.hibernate.tool.hbm2ddl" level="WARN" />
    <logger name="org.hibernate.internal.SessionFactoryRegistry" level="WARN" />
    <logger name="org.hibernate" level="WARN" />
    <logger name="org.hibernate.type" level="WARN" />
    <logger name="org.springframework" level="WARN" />
    <logger name="org.springframework.boot" level="WARN" />
    <logger name="org.springframework.web" level="WARN" />
    <logger name="org.springframework.webflow" level="WARN" />
    <logger name="org.springframework.ws" level="WARN" />
    <logger name="br.com.yanaga.samples" level="WARN" />
    <logger name="org.hibernate.internal.SessionFactoryRegistry" level="ERROR" />
    <logger name="javax.enterprise.resource.webcontainer.jsf.config" level="OFF" />
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
